<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.view.SurfaceView
        android:id="@+id/surface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <RelativeLayout
        android:id="@+id/float_ctrl"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >


	    <EditText
	        android:id="@+id/live_title"
	        android:hint="@+string/live_title"
	        android:layout_width="160dp"
	        android:layout_height="40dp"
	        android:layout_alignParentTop="true"
			android:singleLine="true"
	        android:text="" />
	  	
	  	<EditText
	        android:id="@+id/live_channel"
	        android:hint="@+string/live_channel"
	        android:layout_toRightOf="@+id/live_title"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
			android:singleLine="true"
	        android:text="" />
        
	    <TextView
	        android:id="@+id/live_url"
	        android:hint="@+string/live_url"
	        android:layout_below="@+id/live_channel"
	        android:layout_width="300dp"
	        android:layout_height="40dp"
            android:layout_marginLeft="2dp"
	        android:background="@android:color/holo_blue_dark"
	        android:text="" />

		<CheckBox
			android:id="@+id/record_channel"
            android:layout_below="@+id/live_channel"
			android:layout_toRightOf="@+id/live_url"
			android:layout_width="120dp"
			android:layout_height="40dp"
            android:singleLine="true"
            android:checked="false"
			android:text="@+string/record_channel" />
       	
       	<LinearLayout
       	    android:id="@+id/ctrl_btn"
       	    android:layout_width="match_parent"
       	    android:layout_height="40dp"
       	    android:layout_alignParentBottom="true"
       	    android:gravity="center_horizontal"
       	    android:orientation="horizontal" >
	
	        <Button
	            style="?android:attr/buttonBarButtonStyle"
	            android:id="@+id/button_switch"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
				android:onClick="onClickSwitch"
	            android:text="@+string/switch_camera" >
	        </Button>
	        
	       	<Button
	       	    style="?android:attr/buttonBarButtonStyle"
	            android:id="@+id/button_prepare"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="@+string/prepare" >
	        </Button>
	        
	       	<Button
	       	    style="?android:attr/buttonBarButtonStyle"
	            android:id="@+id/button_preview"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="@+string/preview" >
	        </Button>

	        <Button
	            style="?android:attr/buttonBarButtonStyle"
	            android:id="@+id/button_start"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
				android:onClick="onClickStart"
	            android:text="@+string/start" >
	            <requestFocus />
	        </Button>
       	</LinearLayout>

	</RelativeLayout>

	<com.melnykov.fab.FloatingActionButton
		android:id="@+id/fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|right"
		android:layout_margin="16dp"
		android:src="@drawable/ic_action_content"
		android:onClick="onClickFloatingActionButton"
        fab:fab_colorNormal="@color/primary"
        fab:fab_colorPressed="@color/accent_pressed"
        fab:fab_colorRipple="@color/ripple"
        fab:fab_shadow="false"
        />


</RelativeLayout>