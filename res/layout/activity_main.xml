<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.view.SurfaceView
        android:id="@+id/surface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <RelativeLayout
        android:id="@+id/float_ctrl"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="72dp" 
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >
        
    	<LinearLayout
    	    android:id="@+id/ctrl_up"
	        android:layout_width="match_parent"
	        android:layout_height="36dp"
	        android:layout_alignParentTop="true"
	        android:orientation="horizontal" >

	        <EditText
	            android:id="@+id/live_title"
	            android:hint="@+string/live_title"
	            android:layout_width="96dp"
	            android:layout_height="wrap_content"
	            android:text="" />

	        <EditText
	            android:id="@+id/live_url"
	            android:hint="@+string/live_url"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="" />
       	</LinearLayout>
       	
       	<LinearLayout
       	    android:id="@+id/ctrl_down"
       	    android:layout_width="match_parent"
       	    android:layout_height="36dp"
       	    android:layout_alignParentBottom="true"
       	    android:gravity="center_horizontal"
       	    android:orientation="horizontal" >

	       	<Button
	       	    style="?android:attr/buttonBarButtonStyle"
	            android:id="@+id/button_prepare"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="@+string/prepare" >
	        </Button>
	
	        <Button
	            style="?android:attr/buttonBarButtonStyle"
	            android:id="@+id/button_switch"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="@+string/switch_camera" >
	        </Button>
	        
	       	<Button
	       	    style="?android:attr/buttonBarButtonStyle"
	            android:id="@+id/button_preview"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="@+string/preview" >
	        </Button>

	        <Button
	            style="?android:attr/buttonBarButtonStyle"
	            android:id="@+id/button_start"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="@+string/start" >
	            <requestFocus />
	        </Button>
       	</LinearLayout>
    	
    </RelativeLayout>

</RelativeLayout>